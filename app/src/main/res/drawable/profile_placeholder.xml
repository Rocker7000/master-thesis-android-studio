<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Тінь -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#80000000" /> <!-- Прозорий чорний для тіні -->
            <corners android:radius="50dp"/>
        </shape>
    </item>
    <item android:left="1dp" android:right="2dp" android:top="1dp" android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="#E5EAEE"/> <!-- Колір фону -->
            <corners android:radius="50dp"/>
            <stroke android:width="1dp" android:color="#000000"/> <!-- Чорна обводка 1dp -->
        </shape>
    </item>
</layer-list>
