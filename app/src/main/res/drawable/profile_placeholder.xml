<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Тінь -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#33000000" /> <!-- напівпрозора тінь -->
            <size android:width="120dp" android:height="120dp" /> <!-- розмір тіні трохи більший -->
        </shape>
    </item>
    <!-- Коло для зображення -->
    <item android:top="4dp" android:bottom="4dp" android:left="4dp" android:right="4dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/white" /> <!-- тут має бути фото -->
        </shape>
    </item>
</layer-list>