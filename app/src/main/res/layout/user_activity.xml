<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBF2FA">

    <!-- Фото профілю прикріплене до верхньої частини -->


    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profilePlaceholder"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="#0E000000"
        app:cardCornerRadius="60dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="3dp"
        android:scaleType="centerCrop" />

</androidx.cardview.widget.CardView>

    <!-- Нікнейм користувача -->
    <TextView
        android:id="@+id/nicknameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="20sp"
        android:textColor="#333333"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/profilePlaceholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Панель контактної інформації -->
    <LinearLayout
        android:id="@+id/contactPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:background="#FAFAFA"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/nicknameText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9">

        <!-- Контактні дані з межами без відступів -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name: Borys Shymanskyi"
            android:textColor="#555555"
            android:textSize="20dp"
            android:background="#EFEFEF"
            android:paddingVertical="8dp"
            android:paddingStart="8dp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/emailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: user@example.com"
            android:textColor="#555555"
            android:textSize="20dp"
            android:background="#EFEFEF"
            android:paddingVertical="8dp"
            android:paddingStart="8dp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone: +1234567890"
            android:textColor="#555555"
            android:textSize="20dp"
            android:background="#EFEFEF"
            android:paddingVertical="8dp"
            android:paddingStart="8dp"
            />



        <!-- Кнопка Редагувати -->
        <Button
            android:id="@+id/editButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Редагувати"
            android:textColor="#FFFFFF"
            android:backgroundTint="#5A8F87"
            android:layout_gravity="end"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <!-- Список підключених пристроїв -->
    <LinearLayout
        android:id="@+id/connectedDevicesContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/contactPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/connectedDevicesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connected Devices"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="8dp"/>

        <Button
            android:id="@+id/addDeviceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Додати"
            android:layout_gravity="center_horizontal"
            android:visibility="visible" />

        <!-- Container for the list of devices -->
        <LinearLayout
            android:id="@+id/devicesListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/custom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="#F4F4F8"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="8dp">

        <!-- Кнопка Home -->
        <LinearLayout
            android:id="@+id/nav_home"
            android:clickable="true"
            android:background="@drawable/custom_menu_buttons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingVertical="4dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/home" />

        </LinearLayout>

        <!-- Кнопка User -->
        <LinearLayout
            android:id="@+id/nav_user"
            android:clickable="true"
            android:background="@drawable/custom_menu_buttons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingVertical="4dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/user" />
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/loading_view" />
</androidx.constraintlayout.widget.ConstraintLayout>